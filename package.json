{
  "name": "n8n",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrate": "cd packages/db && bun x prisma migrate dev && bun x prisma generate",
    "db:generate": "cd packages/db && bun x prisma generate",
    "start": "turbo run start",
    "start:frontend": "bun run --cwd apps/frontend start",
    "start:backend": "bun run --cwd apps/backend start",
    "start:engine": "bun run --cwd apps/engine start"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
