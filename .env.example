# Database
POSTGRES_USER=nen_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=nen_db

# JWT Configuration
ACCESS_TOKEN_SECRET="generate-with-openssl-rand-base64-32"
REFRESH_TOKEN_SECRET="generate-with-openssl-rand-base64-32"
ACCESS_TOKEN_EXPIRY="15m"
REFRESH_TOKEN_EXPIRY="7d"

# Google OAuth (for Gmail integration)
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"

# Frontend build-time variable (must match GOOGLE_CLIENT_ID)
VITE_GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"

# Environment
NODE_ENV="development"

DATABASE_URL="postgresql://nen_user:nen_password@localhost:5432/nen_db"

BACKEND_PORT=3000
WS_PORT=3002

VITE_BACKEND_URL=https://api.your-domain.com (or http://your-droplet-ip:3000)
VITE_WS_URL=wss://your-domain.com/ws (or ws://your-droplet-ip:3002)

# Public URLs (REQUIRED for production OAuth to work correctly!)
FRONTEND_URL=https://your-domain.com (or http://your-droplet-ip)
PUBLIC_API_URL=https://api.your-domain.com (or http://your-droplet-ip:3000)